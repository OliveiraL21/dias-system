{
  "name": "dias-system",
  "version": "1.0.1",
  "main": "main.js",
  "author": "Lucas José Dias de Oliveira",
  "description": "Sistema da empresa Dias Systems para gerenciamento de projetos e orçamentos.",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "start": "electron-forge start",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build --base-href ./ && electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "ng build --base-href ./ && electron-builder --publish always"
  },
  "build": {
    "appId": "com.diassystem.app",
    "asar": true,
    "productName": "Dias System",
    "publish": {
      "provider": "github",
      "owner": "OliveiraL21",
      "repo": "dias-system"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "c://projetos/dias-system/release",
      "app": "."
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/Logo-dias-system.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dias System"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "src/assets/images/Logo dias system.png"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "chart.js": "^4.4.1",
    "date-fns": "^4.1.0",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.8.3",
    "primeflex": "^3.3.1",
    "primeicons": "^6.0.1",
    "primeng": "^17.18.15",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.0",
    "@angular/cli": "~17.1.0",
    "@angular/compiler-cli": "^17.1.0",
    "@electron/fuses": "^1.8.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.11.28",
    "electron": "^29.4.6",
    "electron-builder": "^26.8.1",
    "electron-winstaller": "^5.4.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.3.3"
  },
  "extraFiles": [
    "assets",
    "src/assets"
  ]
}
