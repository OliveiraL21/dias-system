{
  "name": "dias-system",
  "version": "1.0.0",
  "main": "main.js",
  "author": "Lucas Jos√© Dias de Oliveira",
  "description": "Sistema da empresa Dias Systems para gerenciamento de tarefas.",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "start": "electron-forge start",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build --base-href ./ && electron .",
    "package": "npm run ng:build:prod && electron-forge package",
    "make": "npm run ng:build:prod && electron-forge make",
    "ng:build:prod": "ng build --configuration production --base-href ./",
    "electron:build": "npm run ng:build:prod && electron-builder"
  },
  "build": {
    "appId": "com.diassystem.app",
    "asar": true,
    "productName": "Dias System",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "c://projetos/dias-system/release"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/Logo-dias-system.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dias System"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "chart.js": "^4.4.1",
    "date-fns": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "primeflex": "^3.3.1",
    "primeicons": "^6.0.1",
    "primeng": "^17.18.15",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.0",
    "@angular/cli": "~17.1.0",
    "@angular/compiler-cli": "^17.1.0",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.11.28",
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12",
    "electron-winstaller": "^5.4.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.3.3"
  },
  "extraFiles": [
    "assets",
    "src/assets"
  ]
}
